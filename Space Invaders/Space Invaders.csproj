<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net5.0</TargetFramework>
        <RootNamespace>Space_Invaders</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="CSFML" Version="2.5.0" />
      <PackageReference Include="SFML.Net" Version="2.5.0" />
    </ItemGroup>
	
	<ItemGroup>
		<None Remove="assets/*.txt" />
		<EmbeddedResource Include="assets/*.txt">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</EmbeddedResource>
	</ItemGroup>
	
	<ItemGroup>
		<None Remove="assets/*.png" />
		<EmbeddedResource Include="assets/*.png">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</EmbeddedResource>
	</ItemGroup>
	
	<ItemGroup>
		<None Remove="assets/*.ttf" />
		<EmbeddedResource Include="assets/*.ttf">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</EmbeddedResource>
	</ItemGroup>
	
		<ItemGroup>
		<None Remove="assets/*.ogg" />
		<EmbeddedResource Include="assets/*.ogg">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</EmbeddedResource>
	</ItemGroup>

</Project>
